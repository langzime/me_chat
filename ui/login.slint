import { VerticalBox, HorizontalBox, LineEdit, Button } from "std-widgets.slint";
import { BorderlessWindow } from "component/base/borderless-window.slint";
import { FriendInfo,AppGlobal } from "./store.slint";

export component Login inherits BorderlessWindow {
    in-out property <string> username: "";
    in-out property <string> password: "";
    in-out property <[FriendInfo]> friend-list: [];
    callback login();

    width: 400px;
    height: 500px;
    background: #f5f5f5;

    Rectangle {
        height: 30px;
        background: transparent;
        TouchArea {
            pointer-event(ev) => {
                root.process-drag-event(0, ev, self.mouse-x, self.mouse-y);
            }
        }
        HorizontalLayout {
            alignment: end;
            spacing: 5px;
            padding-right: 5px;
            Rectangle {
                width: 20px;
                height: 20px;
                background: transparent;
                Text {
                    text: "-";
                    color: gray;
                }
                TouchArea {
                    clicked => {
                        AppGlobal.minimized-window(true);
                    }
                }
            }
            Rectangle {
                width: 20px;
                height: 20px;
                background: transparent;
                Text {
                    text: root.is-maximized ? "❐" : "□";
                    color: gray;
                }
                TouchArea {
                    clicked => {
                        AppGlobal.maximized-window(!root.is-maximized);
                    }
                }
            }
            Rectangle {
                width: 20px;
                height: 20px;
                background: transparent;
                Text {
                    text: "×";
                    color: gray;
                }
                TouchArea {
                    clicked => {
                        AppGlobal.close-window();
                    }
                }
            }
        }
    }

    Rectangle {
        background: white;
        width: 300px;
        height: 400px;
        x: 50px;
        y: 50px;

        VerticalBox {
            spacing: 20px;
            padding: 20px;

            Text {
                text: "登录";
                font-size: 24px;
                horizontal-alignment: center;
            }

            VerticalBox {
                spacing: 10px;

                Text {
                    text: "用户名";
                    font-size: 14px;
                }

                LineEdit {
                    placeholder-text: "请输入用户名";
                    text <=> root.username;
                    padding: 8px;
                }

                Text {
                    text: "密码";
                    font-size: 14px;
                }

                LineEdit {
                    placeholder-text: "请输入密码";
                    text <=> root.password;
                    padding: 8px;
                    input-type: InputType.password;
                }
            }

            Button {
                text: "登录";
                clicked => { root.login(); }
                padding: 12px;
            }

            Text {
                text: "还没有账号？注册";
                font-size: 14px;
                horizontal-alignment: center;
            }
        }
    }
}
